{% extends 'base.twig' %}


{% block content %}
    <p class='text_title' align='center'><strong>{{ trans.um_t_title }}</strong></p>
    <div id='container'>
    	<table cellpadding="0" cellspacing="0" border="0" class="display" id="users_table">
    		<thead>
    			<tr>
    				<th>{{ trans.um_t_th1 }}</th>
    				<th>{{ trans.um_t_th2 }}</th>
    				<th>Uid</th>
    				<th>Gid</th>
    				<th>{{ trans.um_t_th3 }}</th>
    				<th>{{ trans.um_t_th4 }}</th>
    				<th>{{ trans.um_t_th5 }}</th>
    				<th>{{ trans.um_t_th6 }}</th>
    				<th>{{ trans.um_t_th7 }}</th>
    				<th>{{ trans.um_t_th8 }}</th>
    			</tr>
    		</thead>
            <tbody>
                {% for row in data %}
                    <tr>
                        <td align='center'></a><a href='/edit_user.php?id={{ row.id }}'>{{ row.User }}</a></td>
                        <td align='center'>{{ row.status }}</td>
                        <td>{{ row.Uid }}</td>
                        <td>{{ row.Gid }}</td>
                        <td>{{ row.Dir }}</td>
                        <td align='center'>{{ row.ULBandwidth }}</td>
                        <td align='center'>{{ row.DLBandwidth }}</td>
                        <td align='center'>{{ row.ipaccess }}</td>
                        <td align='center'>{{ row.QuotaSize }}</td>
                        <td align='center'>{{ row.QuotaFiles }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <br>
        <br>
        <table width='95%' border='0' align='center' cellpadding='0' cellspacing='0'>
            <tr>
                <td align='right'>
                    <form name='edit' method='post' action='/add_user.php'>
                        <p>
                            <label>
                                <input type='submit' name='add_user' id='add_user' value='{{ trans.um_adduserbutton }}'>
                            </label>
                        </p>
                    </form>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}

